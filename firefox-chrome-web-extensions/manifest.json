{
    "manifest_version": 2,

    "name": "datraolat",
    "description": "Zabalerarik gabeko zuriuneak txertatzeko gehigarria.",
    "version": "0.4.0",

    "background": {
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/icon-16.png",
            "19": "icons/icon-19.png",
            "32": "icons/icon-32.png",
            "38": "icons/icon-38.png",
            "64": "icons/icon-64.png"
        },
        "default_title": "Txertatu zuriune ikustezina"
    },
    "permissions": [
        "activeTab"
    ]
}
